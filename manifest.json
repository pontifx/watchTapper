{
  "manifest_version": 3,
  "name": "watchTapper",
  "version": "1.0.0",
  "description": "Auto-refresh, monitor, shuffle cookies, and visualize web activity.",
  "icons": {
      "16": "icons/icon-red-16.png",
      "32": "icons/icon-red-32.png",
      "48": "icons/icon-red-48.png",
      "64": "icons/icon-red-64.png",
      "128": "icons/icon-red-128.png",
      "256": "icons/icon-red-256.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon-red-16.png",
      "32": "icons/icon-red-32.png",
      "48": "icons/icon-red-48.png",
      "64": "icons/icon-red-64.png",
      "128": "icons/icon-red-128.png",
      "256": "icons/icon-red-256.png"
    }
  },
  "permissions": [
    "storage",
    "alarms",
    "tabs",
    "cookies",
    "scripting",
    "webNavigation",
    "activeTab",
    "declarativeContent",
    "notifications",
    "contextMenus",
    "webRequest"
  ],
  "host_permissions": [
    "<all_urls>"
  ]
}
